<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>cs472.mum.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>cs472.mum.controller.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountName</servlet-name>
        <servlet-class>cs472.mum.controller.AccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountName</servlet-name>
        <url-pattern>/accounts/*</url-pattern>
    </servlet-mapping>

</web-app>